<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/img_loadmore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/custom_indicator_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_loadmore"
        app:layout_constraintLeft_toLeftOf="@id/tv_loadmore"
        app:layout_constraintRight_toRightOf="@id/tv_loadmore"
        app:layout_constraintTop_toTopOf="@id/tv_loadmore" />


    <TextView
        android:id="@+id/tv_loadmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Load More"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>