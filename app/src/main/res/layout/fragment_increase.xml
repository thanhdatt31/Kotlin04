<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IncreaseFragment"
    android:id="@+id/fragment_increase">

    <ImageView
        android:id="@+id/bg_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tracciato_869"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="@id/bg_top"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="@id/bg_top"
        app:layout_constraintRight_toRightOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="@id/bg_top"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.35" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/icons_8_search"
        app:layout_constraintBottom_toBottomOf="@id/ic_logo"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toRightOf="@id/ic_logo"
        app:layout_constraintRight_toRightOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="@id/ic_logo"
        app:layout_constraintWidth_percent="0.07" />


    <ImageView
        android:id="@+id/bg_tablayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/custom_bg_tablayout"
        app:layout_constraintBottom_toBottomOf="@id/bg_top"
        app:layout_constraintHeight_percent="0.08" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@id/bg_tablayout"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintTop_toTopOf="@id/bg_tablayout"
        app:tabIndicator="@drawable/custom_indicator"
        app:tabIndicatorColor="@null"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="stretch"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/customfontstyle" />


<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/bg_tablayout"-->
<!--        app:layout_constraintVertical_bias="0.0"-->
<!--        tools:layout_editor_absoluteX="0dp" />-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bg_tablayout"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>