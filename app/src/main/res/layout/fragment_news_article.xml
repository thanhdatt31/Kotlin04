<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f8f8f8"
    tools:context=".fragment.NewsArticleFragment">

    <ImageView
        android:id="@+id/img_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:src="@drawable/raggruppa_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icons_8_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/icons_8_calendar"
        app:layout_constraintLeft_toLeftOf="@id/img_main"
        app:layout_constraintTop_toBottomOf="@id/img_main" />


    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/custom_bg_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_2"
        app:layout_constraintLeft_toLeftOf="@id/tv_text_1"
        app:layout_constraintRight_toRightOf="@id/tv_text_1"
        app:layout_constraintTop_toTopOf="@id/tv_text_1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/custom_bg_text_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_text"
        app:layout_constraintLeft_toLeftOf="@id/tv_text"
        app:layout_constraintRight_toRightOf="@id/tv_text"
        app:layout_constraintTop_toTopOf="@id/tv_text" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/raleway_regular"
        android:paddingStart="6dp"
        android:paddingTop="1dp"
        android:paddingEnd="6dp"
        android:paddingBottom="1dp"
        android:textColor="#0a0909"
        android:textSize="9sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/img_bg"
        app:layout_constraintRight_toRightOf="@id/img_bg"
        android:text="CRYPTOCURRENCY" />

    <TextView
        android:id="@+id/tv_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:text="What is the future of"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintRight_toRightOf="@id/img_main"
        app:layout_constraintTop_toTopOf="@id/icons_8_calendar" />

    <TextView
        android:id="@+id/tv_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:paddingBottom="2dp"
        android:text="cryptocurrencies?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintRight_toRightOf="@id/tv_text_1"
        app:layout_constraintTop_toBottomOf="@id/tv_text_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_light"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/tv_text_2"
        app:layout_constraintLeft_toLeftOf="@id/icons_8_calendar"
        android:text="02 Set 2020" />

    <TextView
        android:id="@+id/tv_article"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/article"
        android:fontFamily="@font/lato_regular"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_main"
        app:layout_constraintRight_toRightOf="@id/img_main"
        app:layout_constraintTop_toBottomOf="@id/img_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>